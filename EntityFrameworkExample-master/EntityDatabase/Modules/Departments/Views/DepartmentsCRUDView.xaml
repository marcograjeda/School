<Window x:Class="DepartmentsCRUDView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="DepartmentsCRUDView" Height="300" Width="300">
    <Grid>
        <Label Content="Name" HorizontalAlignment="Left" Margin="41,32,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="126,32,0,0" TextWrapping="Wrap" Text="{Binding Nombres, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="141"/>
        <Label Content="Budget" HorizontalAlignment="Left" Margin="41,86,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="126,86,0,0" TextWrapping="Wrap" Text="{Binding Presupuesto, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="141"/>
        <Button Command="{Binding ButtonCrear}" Content="Aceptar" HorizontalAlignment="Left" Margin="111,196,0,0" VerticalAlignment="Top" Width="97" Height="39"/>
    </Grid>
</Window>
