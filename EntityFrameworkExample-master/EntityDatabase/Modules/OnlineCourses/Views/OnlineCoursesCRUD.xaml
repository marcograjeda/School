<Window x:Class="OnlineCoursesCRUD"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="OnlineCoursesCRUD" Height="300" Width="300">
    <Grid>
        <Button Content="Aceptar" HorizontalAlignment="Left" Margin="107,205,0,0" VerticalAlignment="Top" Width="75" Command="{Binding AcceptButton}"/>
        <Label Content="Course" HorizontalAlignment="Left" Margin="36,59,0,0" VerticalAlignment="Top"/>
        <Label Content="URL" HorizontalAlignment="Left" Margin="36,112,0,0" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Left" Margin="120,63,0,0" VerticalAlignment="Top" Width="120" DisplayMemberPath="Title" ItemsSource="{Binding Courses}" SelectedItem="{Binding SelectCourse}"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="120,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding Url}"/>
    </Grid>
</Window>
